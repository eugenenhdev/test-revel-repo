{% assign heading = section.settings.title %}
{% assign description = section.settings.description %}
{% assign linkText = section.settings.link %}
{% assign link = section.settings.link %}
{% assign newTab = section.settings.new-tab %}
{% assign imagePosition = section.settings.image-position %}


<div class="py-10">
    <div class="container-full">
    {% if imagePosition == 'right' %}
        <div class="[&:not(:last-child)]:mb-10 grid grid-cols-[0.65fr_1.35fr] mddn:grid-cols-[1fr] items-center justify-self-center">
            <div class="item">
                    <div class="content p-16 lgdn:p-10  xsdn:p-5 ">
                            {% if heading != blank %}
                                <h2 class="text-h3">
                                    {{ heading }}
                                </h2>
                                {% else %}
                                <h2 class="text-h3">
                                    Section Heading
                                </h2>
                            {% endif %}
                        {% if description != blank%}
                        <div class="mt-20 mddn:mt-10">
                                <p>
                                     {{ description }}
                                </p>
                                {% else %}
                                <p>
                                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iure, recusandae nemo. Totam magnam obcaecati sunt asperiores, dolore commodi rerum natus, ipsa ducimus reiciendis quaerat enim consequuntur deserunt. Nesciunt, dolorem. Vero.
                                </p>
                            {% endif %}
                           {% if link != blank and linkText != blank %}
                           <a href="{{ link }}" {% if newTab == true %}target="_blank" {% endif %}class="button mt-4">{{ linkText }}</a>
                           {% else %}
                           <a href="#" class="button mt-4">Book Now</a>
                           {% endif %}
                        </div>
                     
                        
                    </div>
                    <div class="item self-stretch">
                            <!-- Slider Code -->
                            <div id="controls-carousel-{{ section.id }}" class="relative h-full min-h-[500px] w-full  xl:min-h-[1080px]" data-carousel="static">
                                <!-- Carousel wrapper -->
                                <div class="relative h-full overflow-hidden">
                                    {% for block in section.blocks %}
                                        {% assign image = block.settings.image | img_url: 'master' %}
                                        {% assign imageAlt = block.settings.image.alt %}    
                                <!-- Item 1 -->
                                    <div class="hidden duration-700 ease-in-out" data-carousel-item>
                                        <img src="{{ image }}" class="h-full object-cover block w-full" alt="{{ imageAlt}}">
                                    </div>
                                {% endfor %}
                                </div>

                                <!-- Slider controls -->
                                <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none hover:bg-transparent" data-carousel-prev>
                                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                    <img src=" {{ 'arrow-left.svg' |  asset_url }}" alt>
                                        <span class="sr-only">Previous</span>
                                    </span>
                                </button>
                                <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none hover:bg-transparent" data-carousel-next>
                                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                                    <img src=" {{ 'arrow-right.svg' |  asset_url }}" alt>
                                        <span class="sr-only">Next</span>
                                    </span>
                                </button>
                            </div>
                            <!-- Slider Code-->
                       </div>
            </div>
        </div>

     {% else %}

     <div class="[&:not(:last-child)]:mb-10 grid grid-cols-[1.35fr_0.65fr] mddn:grid-cols-[1fr] items-center justify-self-center">
        <div class="item self-stretch">
            <!-- Slider Code -->
            <div id="controls-carousel-{{ section.id }}" class="relative h-full min-h-[500px] w-full  xl:min-h-[1080px]" data-carousel="static">
                <!-- Carousel wrapper -->
                <div class="relative h-full overflow-hidden">
                    {% for block in section.blocks %}
                        {% assign image = block.settings.image | img_url: 'master' %}
                        {% assign imageAlt = block.settings.image.alt %}    
                <!-- Item 1 -->
                    <div class="hidden duration-700 ease-in-out" data-carousel-item>
                        <img src="{{ image }}" class="h-full object-cover block w-full" alt="{{ imageAlt}}">
                    </div>
                {% endfor %}
                </div>

                <!-- Slider controls -->
                <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none hover:bg-transparent" data-carousel-prev>
                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                    <img src=" {{ 'arrow-left.svg' |  asset_url }}" alt>
                        <span class="sr-only">Previous</span>
                    </span>
                </button>
                <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none hover:bg-transparent" data-carousel-next>
                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
                    <img src=" {{ 'arrow-right.svg' |  asset_url }}" alt>
                        <span class="sr-only">Next</span>
                    </span>
                </button>
            </div>
            <!-- Slider Code-->
    </div>
        <div class="item mddn:order-first">
                    <div class="content p-16  lgdn:p-10 xsdn:p-5">
                            {% if heading != blank %}
                                <h2 class="text-h3">
                                    {{ heading }}
                                </h2>
                                {% else %}
                                <h2 class="text-h3">
                                    Section Heading
                                </h2>
                            {% endif %}
                        {% if description != blank%}
                        <div class="mt-20 mddn:mt-10">
                                <p>
                                     {{ description }}
                                </p>
                                {% else %}
                                <p>
                                    Lorem ipsum, dolor sit amet consectetur adipisicing elit. Iure, recusandae nemo. Totam magnam obcaecati sunt asperiores, dolore commodi rerum natus, ipsa ducimus reiciendis quaerat enim consequuntur deserunt. Nesciunt, dolorem. Vero.
                                </p>
                            {% endif %}
                           {% if link != blank and linkText != blank %}
                           <a href="{{ link }}" {% if newTab == true %}target="_blank" {% endif %}class="button mt-4">{{ linkText }}</a>
                           {% else %}
                           <a href="#" class="button mt-4">Book Now</a>
                           {% endif %}
                        </div>
                    </div>

            </div>
        </div>
     {% endif %}
</div>
</div>