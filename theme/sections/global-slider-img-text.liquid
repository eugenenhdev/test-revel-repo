      ],
      "blocks": [
        {
          "name": "Slide Image",
          "type": "block-1",
          "settings": [
            {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Images"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Slider Image Text"
        }
      ]
    }
