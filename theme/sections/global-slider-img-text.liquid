{% render 'global-slider-image-text' %}

{% schema %}
    {
      "name": "Slider Image Text",
      "tag": "section",
      "class": "section-slider-image-text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Second instruction"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },
        {
          "type": "checkbox",
          "id": "new-tab",
          "label": "Open in New Tab"
        },
        {
          "type": "select",
