{% render 'global-static-image-text' %}

{% schema %}
{
  "name": "Static Image Text",
  "tag": "section",
  "class": "section-name",
  "settings": [],
  "blocks": [
    {
      "name": "Image Text",
      "type": "block-one",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "image-position",
          "label": "Image Position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "text",
          "id": "link-text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },

        {
          "type": "checkbox",
          "id": "new-tab",
          "label": "Open in New Tab"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Static Image Text"
    }
  ]
}
{% endschema %}
